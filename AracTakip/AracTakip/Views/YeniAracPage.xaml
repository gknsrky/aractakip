<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="clr-namespace:UraniumUI.Material;assembly=UraniumUI.Material"
             x:Class="AracTakip.Views.YeniAracPage"
             Title="Yeni Araç Ekle">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <material:TextField x:Name="PlakaEntry" Title="Plaka" />
            <material:TextField x:Name="MarkaEntry" Title="Marka" />
            <material:TextField x:Name="ModelEntry" Title="Model" />
            <material:TextField x:Name="YilEntry" Title="Yıl" Keyboard="Numeric" />
            <material:TextField x:Name="KmEntry" Title="Güncel Kilometre" Keyboard="Numeric" />

            <material:TextField x:Name="ArvEntry" Title="ARV Cihaz No" />
            <material:TextField x:Name="SasiEntry" Title="Şasi No" />
            <material:TextField x:Name="MotorEntry" Title="Motor No" />

            <material:TextField x:Name="RuhsatSeriEntry" Title="Ruhsat Seri No" />
            <material:TextField x:Name="FirmaEntry" Title="Ruhsat Sahibi Firma" />

            <material:DatePickerField x:Name="VizePicker" Title="Vize Bitiş Tarihi" />
            <material:DatePickerField x:Name="KaskoPicker" Title="Kasko Bitiş Tarihi" />
            <material:DatePickerField x:Name="SigortaPicker" Title="Sigorta Bitiş Tarihi" />

            <material:EditorField x:Name="NotlarEditor" Title="Notlar (isteğe bağlı)" />

            <material:Button Text="Kaydet" 
                             Clicked="OnKaydetClicked" 
                             Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>