<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AracTakip.Views.YeniBakimPage"
             Title="Yeni Bakım Kaydı">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Bakım Tarihi:" />
        <DatePicker />

        <Label Text="Araç Kilometresi:" />
        <Entry Keyboard="Numeric" Placeholder="Örn: 125000" />

        <Label Text="Yapılan İşlemler:" />
        <Editor AutoSize="TextChanges" HeightRequest="150" Placeholder="Yapılan tüm işlemleri detaylıca yazın..." />

        <Label Text="Tutar (₺):" />
        <Entry Keyboard="Numeric" Placeholder="Örn: 1500.50" />

        <Button Text="Fatura/Belge Ekle" Margin="0,20,0,0" />

        <Button Text="Kaydet" FontAttributes="Bold" Margin="0,10,0,0" />
    </VerticalStackLayout>
</ContentPage>