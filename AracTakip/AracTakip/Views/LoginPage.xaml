<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AracTakip.Views.LoginPage"
             Shell.NavBarIsVisible="False">
    <Grid>
        <VerticalStackLayout 
            Spacing="15" 
            Padding="30,0"
            VerticalOptions="Center" 
            HorizontalOptions="FillAndExpand">

            <Image 
                Source="app_logo.png" HeightRequest="100"
                Margin="0,0,0,20"/>
            <Label 
                Text="Filo Takip Sistemine Hoş Geldiniz"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                TextColor="{StaticResource PrimaryTextColor}"/>
            <Label
                Text="Lütfen devam etmek için giriş yapın"
                FontSize="16"
                HorizontalTextAlignment="Center"
                TextColor="{StaticResource SecondaryTextColor}"
                Margin="0,0,0,20"/>

            <Border Style="{StaticResource CardView}">
                <Grid ColumnDefinitions="Auto, *" ColumnSpacing="15" Padding="10,0">
                    <Image Source="email_icon.png" Style="{StaticResource IconSmall}"/>
                    <Entry Grid.Column="1" x:Name="EmailEntry" Placeholder="E-posta" Keyboard="Email" Style="{StaticResource FramelessEntry}"/>
                </Grid>
            </Border>

            <Border Style="{StaticResource CardView}">
                <Grid ColumnDefinitions="Auto, *" ColumnSpacing="15" Padding="10,0">
                    <Image Source="lock_icon.png" Style="{StaticResource IconSmall}"/>
                    <Entry Grid.Column="1" x:Name="PasswordEntry" Placeholder="Şifre" IsPassword="True" Style="{StaticResource FramelessEntry}"/>
                </Grid>
            </Border>

            <Grid ColumnDefinitions="*, Auto">
                <HorizontalStackLayout Grid.Column="0">
                    <CheckBox x:Name="RememberMeCheckbox" Color="{StaticResource PrimaryAccentColor}" />
                    <Label Text="Beni hatırla" VerticalOptions="Center" Style="{StaticResource LabelSecondary}"/>
                </HorizontalStackLayout>
            </Grid>


            <Button 
                Text="Giriş Yap" 
                Clicked="OnLoginClicked" 
                Style="{StaticResource ActionButton}"
                HeightRequest="50"
                Margin="0,10,0,0"/>

            <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>