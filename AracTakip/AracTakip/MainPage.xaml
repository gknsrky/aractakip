<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AracTakip.Views.MainPage">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- 🔍 Arama -->
        <SearchBar x:Name="AramaCubugu"
                   Placeholder="Araç ara (plaka, marka, model)"
                   TextChanged="OnSearchTextChanged"
                   Grid.Row="0"
                   Margin="10" />

        <!-- 🚗 Araç Listesi -->
        <CollectionView x:Name="AracListesi"
                        ItemsSource="{Binding Araclar}"
                        SelectionMode="Single"
                        SelectionChanged="AracListesi_SelectionChanged"
                        Grid.Row="1"
                        Margin="10">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" CornerRadius="8" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Plaka}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding Marka}" />
                            <Label Text="{Binding Model}" />
                            <Label Text="{Binding GuncelKilometre, StringFormat='Kilometre: {0} km'}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- 📥 Alt Menü Butonu -->
        <Grid Grid.Row="2" Padding="10">
            <Button Text="➕ Yeni Araç Ekle"
                    BackgroundColor="DarkSlateBlue"
                    TextColor="White"
                    Clicked="OnYeniAracEkleClicked"/>
        </Grid>

    </Grid>
</ContentPage>
